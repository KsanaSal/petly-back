{
  "openapi": "3.0.0",
  "info": {
    "version": "2.0.2",
    "title": "Pet-Support API with Swagger",
    "description": "This is CRUD API application made with Express and documented with Swagger"
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [
    {
      "url": "https://pet-support.up.railway.app"
    },
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Notices",
      "description": "API for notices in the system"
    },
    {
      "name": "News",
      "description": "API for news in the system"
    },
    {
      "name": "Services",
      "description": "API for services-sidebar in the system"
    },
    {
      "name": "Pets",
      "description": "API for pets in the system"
    }
  ],

  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Users"],
        "summary": "User registration",
        "parameters": [],
        "requestBody": {
          "description": "Registration object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "409": {
            "description": "Email already exist"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Users"],
        "summary": "User login",
        "parameters": [],
        "requestBody": {
          "description": "Login object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User has been logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/auth/current": {
      "get": {
        "tags": ["Users"],
        "summary": "Get current user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {},
        "responses": {
          "200": {
            "description": "Current User",
            "content": {
              "application/json": {
                "sсhema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update current user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {},
        "responses": {
          "200": {
            "description": "Current User has been updated",
            "content": {
              "application/json": {
                "sсhema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/auth/logout": {
      "get": {
        "tags": ["Users"],
        "summary": "User logout",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {},
        "responses": {
          "204": {
            "description": "User has been logged out successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/notices": {
      "get": {
        "tags": ["Notices"],
        "summary": "Get notices by key words",
        "parameters": [],
        "requestBody": {},
        "responses": {
          "200": {
            "description": "Get notices successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/notices/user": {
      "get": {
        "tags": ["Notices"],
        "summary": "Get authorized user notices ",
        "security": [{ "Bearer": [] }],
        "parameters": [],
        "requestBody": {},
        "responses": {
          "200": {
            "description": "Get authorized user notices successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/notices/category/{categoryName}": {
      "parameters": [
        {
          "name": "categoryName",
          "in": "path",
          "required": true,
          "description": "Name of category that notices needs to be found ['sell', 'lost_found', 'in_good_hands']",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Notices"],
        "summary": "Get authorized user notices ",
        "requestBody": {},
        "responses": {
          "200": {
            "description": "Get notices by category successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": ["Notices"],
        "summary": "Post notice to chosen category by authorized user",
        "security": [{ "Bearer": [] }],
        "requestBody": {},
        "responses": {
          "200": {
            "description": "Notice has been posted successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/notices/id/{noticeId}": {
      "parameters": [
        {
          "name": "noticeId",
          "in": "path",
          "required": true,
          "description": "Notice Id to be found",
          "type": "string",
          "format": "ObjectId"
        }
      ],
      "get": {
        "tags": ["Notices"],
        "summary": "Get notice by Id",
        "requestBody": {},
